<!doctype html>
<html>
<head>
<title>
<%=title%>
</title>
<script type="text/javascript" src="../../javascripts/jquery-3.2.1.min.js"></script>
<meta charset="UTF-8">
</head>
<body>

<!-- 会社ロゴ -->
<img src="../../images/common/logo01.gif">

<form method="post">
	<div>
	社員番号
	<input type="text" name="shainNo" value="<%= query.shainNo%>" placeholder="00001">
	</div>
	<div>
	メールアドレス
	<input type="text" name="email" value="<%= query.email%>" placeholder="XXXX@central-soft.co.jp">
	</div>
	<div>
	生年月日
	<input type="text" name="birthdate" value="<%= query.birthdate%>" placeholder="19870701">
	</div>
	<div>
	<input type="submit" name="createInitPasswordButton" value="初期パスワードを発行する">
	</div>

<% if (result.err) { %>
	<div>
	<%= result.err%>
	</div>
<% } %>
<% if (result.pass) { %>
	<div>
	初期パスワード「<%= result.pass%>」
	</div>
<% } %>
</form>

<form method="get" action="/">
	<input type="submit" name="loginButton" value="ログイン画面に戻る">
</form>

</body>
</html>