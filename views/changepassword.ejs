<!doctype html>
<html>
<head>
<title>
パスワード変更画面
</title>
<link rel="stylesheet" type="text/css" href="../../stylesheets/umi_changepassword.css">
<script type="text/javascript" src="../../javascripts/jquery-3.2.1.min.js"></script>
<meta charset="UTF-8">
</head>
<body>

<!-- 会社ロゴ -->
<img src="../../images/common/logo01.gif">

<div class="line"></div>

<div class="changepassword_frame">
	<form method="post" action="/changepassword">
		<input type="hidden" name="shainNo" value="<%= query.shainNo%>">
		<div>
		新しいパスワードを入力してください。
		</div>
		<div>
		<input type="text" name="password" autofocus>
		</div>
		<div>
		<input type="submit" name="loginButton" value="パスワードを変更する">
		</div>

	<% if (result && result.err) { %>
		<div>
		<%= result.err%>
		</div>
	<% } %>
	</form>
</div>

</body>
</html>