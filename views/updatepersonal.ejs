<!doctype html>
<html>
<head>
<title>
社員情報変更画面
</title>
<link rel="stylesheet" type="text/css" href="../../stylesheets/umi_updatepersonal.css">
<script type="text/javascript" src="../../javascripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="../../javascripts/umi_updatepersonal.js"></script>
<meta charset="UTF-8">
</head>
<body>

<!-- 会社ロゴ -->
<a href="/"><img src="../../images/common/logo01.gif"></a>

<div class="line"></div>

<div class="updatepersonal_frame">

	<form id="updatepersonalForm" method="post" action="/updatepersonal/confirm">
		<div class="item">
			社員No
			<input type="text" name="shainNo" value="<%= query.shainNo%>" placeholder="例：00001" autofocus>
			<%= result.name%>
		</div>
		<div class="item">
			<input type="button" name="confirmButton" id="confirmButton" value="名前を確認する">
		</div>
		<div class="item">
			<%= result.err%>
		</div>
		<div class="item">
			<%= result.msg%>
		</div>

		<div id="input-form" class="input-form">
			<table>
				<tr>
					<td>
						姓
					</td>
					<td>
						<input type="text" class="input require" name="employeeFamilyName">
					</td>
				</tr>
				<tr>
					<td>
						名
					</td>
					<td>
						<input type="text" class="input require" name="employeeFirstName">
					</td>
				</tr>
				<tr>
					<td>
						セイ
					</td>
					<td>
						<input type="text" class="input require" name="employeeFamilyNameKana">
					</td>
				</tr>
				<tr>
					<td>
						メイ
					</td>
					<td>
						<input type="text" class="input require" name="employeeFirstNameKana">
					</td>
				</tr>
				<tr>
					<td>
						メールアドレス
					</td>
					<td>
						<input type="text" class="input require" name="email">
					</td>
				</tr>
				<tr>
					<td>
						郵便番号
					</td>
					<td>
						<input type="text" class="input require" name="zip">
					</td>
				</tr>
				<tr>
					<td>
						住所
					</td>
					<td>
						<input type="text" class="input require" name="address">
					</td>
				</tr>
				<tr>
					<td>
						最寄り駅
					</td>
					<td>
						<input type="text" name="nearStationSupport">
						<select class="input require" name="nearStation">
							<option value="">-</option>
						</select>
					</td>
				</tr>
				<tr>
					<td>
						電話番号
					</td>
					<td>
						<input type="text" class="input" name="telNo">
					</td>
				</tr>
				<tr>
					<td>
						携帯電話番号
					</td>
					<td>
						<input type="text" class="input" name="cellTelNo">
					</td>
				</tr>
				<tr>
					<td>
						郵便番号(緊急)
					</td>
					<td>
						<input type="text" class="input require" name="zipHome">
					</td>
				</tr>
				<tr>
					<td>
						住所(緊急)
					</td>
					<td>
						<input type="text" class="input require" name="addressHome">
					</td>
				</tr>
				<tr>
					<td>
						電話番号(緊急)
					</td>
					<td>
						<input type="text" class="input require" name="telNoHome">
					</td>
				</tr>
			</table>
		</div>
	</form>
</div>

</body>
</html>